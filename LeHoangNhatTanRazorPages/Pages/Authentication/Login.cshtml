@page
@model LeHoangNhatTanRazorPages.Pages.Authentication.LoginModel
@{
    ViewData["Title"] = "Login";
}
<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-header bg-transparent text-black">
                <h2 class="card-title text-center mb-0">Login</h2>
            </div>
            <div class="card-body">
                <form method="post" id="loginForm">

                    <div class="mb-3">
                        <label asp-for="LoginInput.Email" class="form-label">Email</label>
                        <input asp-for="LoginInput.Email" class="form-control" placeholder="Enter your email" />
                        <span asp-validation-for="LoginInput.Email" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="LoginInput.Password" class="form-label">Password</label>
                        <input asp-for="LoginInput.Password" type="password" class="form-control" placeholder="Enter your password" />
                        <span asp-validation-for="LoginInput.Password" class="text-danger"></span>
                    </div>
                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-close-white">Login</button>
                    </div>
                    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                    @if (!string.IsNullOrEmpty(Model.Message))
                    {
                        <div class="alert alert-warning">
                            @Model.Message
                        </div>
                    }
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}