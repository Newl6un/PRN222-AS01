@model IEnumerable<NewsArticleViewModel>

<div class="card shadow-sm border-0 mb-4">
    <div class="card-header bg-primary text-white py-3">
        <h6 class="card-title mb-0 d-flex align-items-center">
            <i class="bi bi-newspaper me-2"></i>
            Bài viết liên quan
        </h6>
    </div>
    <div class="card-body p-0">
        <div class="list-group list-group-flush">
            @foreach (var news in Model)
            {
                <div class="list-group-item border-0 py-3">
                    <div class="d-flex align-items-center">

                        <div class="flex-grow-1 ">
                            <div class="d-flex justify-content-between align-items-start mb-1">
                                <a href="Details?id=@news.NewsArticleId"
                                   class="text-decoration-none link-primary fw-semibold stretched-link"
                                   title="@news.NewsTitle">
                                    @(news.NewsTitle.Length > 80 ? news.NewsTitle.Substring(0, 77) + "..." : news.Headline)
                                </a>
                            </div>

                            <div class="d-flex align-items-center text-muted small">
                                <i class="bi bi-calendar3 me-1"></i>
                                <span>@news.FormattedCreatedDate</span>
                                <i class="bi bi-dot"></i>
                                <i class="bi bi-folder me-1"></i>
                                <span>@news.CategoryName</span>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="card-body text-center text-muted py-5">
            <i class="bi bi-inbox display-4"></i>
            <p class="mt-2 mb-0">Chưa có bài viết liên quan</p>
        </div>
    }
</div>

<style>
    /* Hiệu ứng hover cho items */
    .list-group-item {
        transition: all 0.2s ease-in-out;
    }

        .list-group-item:hover {
            background-color: var(--bs-gray-100);
        }

        /* Giới hạn số dòng tiêu đề */
        .list-group-item a {
            display: -webkit-box;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
            overflow: hidden;
            line-height: 1.5;
        }

    /* Đường ngăn cách nhỏ giữa các thông tin */
    .bi-dot {
        margin: 0 0.5rem;
        font-size: 0.5rem;
        vertical-align: middle;
    }
</style>