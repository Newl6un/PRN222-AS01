@model ProfileViewModel

<form method="post" asp-page-handler="Edit" class="needs-validation" novalidate>
    <input type="hidden" asp-for="AccountId" />

    <div class="mb-4">
        <label asp-for="AccountName" class="form-label"></label>
        <div class="input-group">
            <span class="input-group-text">
                <i class="bi bi-person"></i>
            </span>
            <input asp-for="AccountName" class="form-control" />
        </div>
        <span asp-validation-for="AccountName" class="text-danger"></span>
    </div>

    <div class="mb-4">
        <label asp-for="AccountEmail" class="form-label"></label>
        <div class="input-group">
            <span class="input-group-text">
                <i class="bi bi-envelope"></i>
            </span>
            <input asp-for="AccountEmail" class="form-control" />
        </div>
        <span asp-validation-for="AccountEmail" class="text-danger"></span>
    </div>

    <div class="mb-4">
        <label asp-for="AccountRole" class="form-label"></label>
        <input type="text" class="form-control" value="@Model.RoleName" readonly disabled />
    </div>

    <div class="mb-4">
        <label class="form-label">Số bài viết đã đăng</label>
        <input type="text" class="form-control" value="@Model.NewsCount" readonly disabled />
    </div>

    <div class="d-flex gap-2 justify-content-end">
        <a asp-page="./Index" class="btn btn-light">
            <i class="bi bi-arrow-left me-2"></i>Quay lại
        </a>
        <button type="submit" class="btn btn-primary">
            <i class="bi bi-save me-2"></i>Lưu thay đổi
        </button>
    </div>
</form>