@model CategoryViewModel


<form id="DeleteNewsForm-@Model.CategoryId" method="post" asp-page-handler="Delete" class="needs-validation">
    @Html.AntiForgeryToken()
    <input type="hidden" name="id" value="@Model.CategoryId" />

    <div class="modal-body">
        <div class="text-center mb-4">
            <i class="bi bi-exclamation-triangle text-warning" style="font-size: 3rem;"></i>
            <h5 class="mt-3 text-danger">Xác nhận xóa danh mục</h5>
            <p class="text-muted">Bạn có chắc chắn muốn xóa danh mục này? Hành động này không thể hoàn tác.</p>
        </div>

        <div class="card bg-light mb-3">
            <div class="card-body">
                <div class="row mb-3">
                    <label class="col-sm-4 col-form-label fw-bold">Tên danh mục:</label>
                    <div class="col-sm-8">
                        <p class="form-control-plaintext">@Model.CategoryName</p>
                    </div>
                </div>

                <div class="row mb-3">
                    <label class="col-sm-4 col-form-label fw-bold">Mô tả danh mục:</label>
                    <div class="col-sm-8">
                        <p class="form-control-plaintext">@Model.CategoryDesciption</p>
                    </div>
                </div>

                <div class="row mb-3">
                    <label class="col-sm-4 col-form-label fw-bold">Số tin tức có danh mục này:</label>
                    <div class="col-sm-8">
                        <p class="form-control-plaintext">@Model.NewsCount</p>
                    </div>
                </div>

                <div class="row">
                    <label class="col-sm-4 col-form-label fw-bold">Trạng thái:</label>
                    <div class="col-sm-8">
                        <p class="form-control-plaintext">@Model.StatusText</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="modal-footer border-top-0">
        <button type="button" class="btn btn-light" data-bs-dismiss="modal">
            <i class="bi bi-x-lg me-2"></i>Hủy
        </button>
        <button type="submit" class="btn btn-danger" form="DeleteNewsForm-@Model.CategoryId">
            <i class="bi bi-trash me-2"></i>Xác nhận xóa
        </button>
    </div>
</form>