@model AccountViewModel

<form id="deleteAccountForm-@Model.AccountId" method="post" asp-page-handler="Delete">
    <div class="modal-header border-bottom-0">
        <h5 class="modal-title" id="deleteAccountModalLabel-@Model.AccountId">
            <i class="bi bi-trash-fill text-danger me-2"></i>Xác nhận xóa tài khoản
        </h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
    </div>

    <div class="modal-body">
        @Html.AntiForgeryToken()
        <input type="hidden" name="id" value="@Model.AccountId" />

        <div class="text-center mb-4">
            <i class="bi bi-exclamation-triangle-fill text-warning" style="font-size: 3rem;"></i>
            <div class="alert alert-warning mt-3 mb-0">
                <p class="mb-1">Bạn có chắc chắn muốn xóa tài khoản này?</p>
                <p class="small mb-0 text-danger">Hành động này không thể hoàn tác!</p>
            </div>
        </div>

        <div class="card bg-light">
            <div class="card-body">
                <div class="row g-3">
                    <div class="col-12">
                        <div class="d-flex">
                            <div class="fw-bold" style="width: 120px;">
                                <i class="bi bi-person me-2"></i>Tài khoản:
                            </div>
                            <div>@Model.AccountName</div>
                        </div>
                    </div>

                    <div class="col-12">
                        <div class="d-flex">
                            <div class="fw-bold" style="width: 120px;">
                                <i class="bi bi-envelope me-2"></i>Email:
                            </div>
                            <div>@Model.AccountEmail</div>
                        </div>
                    </div>

                    <div class="col-12">
                        <div class="d-flex">
                            <div class="fw-bold" style="width: 120px;">
                                <i class="bi bi-person-badge me-2"></i>Vai trò:
                            </div>
                            <div>
                                <span class="badge bg-@(Model.AccountRole == 0 ? "danger" :
                                                                   Model.AccountRole == 1 ? "primary" :
                                                                   Model.AccountRole == 2 ? "success" : "secondary")">
                                    @Model.RoleName
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="modal-footer border-top-0">
        <button type="button" class="btn btn-light" data-bs-dismiss="modal">
            <i class="bi bi-x-circle me-2"></i>Hủy bỏ
        </button>
        <button type="submit" class="btn btn-danger">
            <i class="bi bi-trash me-2"></i>Xác nhận xóa
        </button>
    </div>
</form>

<style>
    /* Tùy chỉnh modal */
    .modal-content {
        border: none;
        border-radius: 0.5rem;
    }

    .modal-header {
        padding: 1rem 1.5rem;
    }

    .modal-body {
        padding: 1.5rem;
    }

    .modal-footer {
        padding: 1rem 1.5rem;
        gap: 0.5rem;
    }

    /* Animation cho icon cảnh báo */
    .bi-exclamation-triangle-fill {
        animation: warningPulse 2s infinite;
    }

    @@keyframes warningPulse {
        0% {
            transform: scale(1);
            opacity: 1;
        }

        50% {
            transform: scale(1.1);
            opacity: 0.8;
        }

        100% {
            transform: scale(1);
            opacity: 1;
        }
    }

    /* Hiệu ứng hover cho nút */
    .btn {
        transition: all 0.2s;
    }

        .btn:hover {
            transform: translateY(-1px);
        }

    .btn-danger:hover {
        box-shadow: 0 4px 8px rgba(220, 53, 69, 0.2);
    }

    /* Style cho badge */
    .badge {
        padding: 0.5em 0.8em;
        font-weight: 500;
    }
</style>