@model AccountViewModel

<form method="post" autocomplete="off" asp-page-handler="Create">
    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

    <input type="hidden" asp-for="AccountId" />

    <div class="mb-3">
        <label asp-for="AccountName" class="form-label"></label>
        <input asp-for="AccountName" class="form-control" placeholder="Enter name" />
        <span asp-validation-for="AccountName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="AccountEmail" class="form-label"></label>
        <input asp-for="AccountEmail" type="email" class="form-control" placeholder="Enter email" />
        <span asp-validation-for="AccountEmail" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="AccountRole" class="form-label">Vai trò <span class="text-danger">*</span></label>
        <select asp-for="AccountRole" class="form-select" required>
            <option value="">-- Chọn vai trò --</option>
            <option value="1">Nhân viên</option>
            <option value="2">Giảng viên</option>
        </select>
        <span asp-validation-for="AccountRole" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="AccountPassword" class="form-label"></label>
        <input asp-for="AccountPassword" type="password" class="form-control"
               value="@Model.AccountPassword" placeholder="Enter new password (leave blank to keep current)"
               autocomplete="new-password" />
        <span asp-validation-for="AccountPassword" class="text-danger"></span>
    </div>


    <div class="form-group mt-3 d-flex justify-content-between">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
        <button type="submit" class="btn btn-primary">Tạo tài khoản</button>
    </div>
</form>